<div class="">
<div class="container center-align">
    <br>
<div class="row">
    <div class="col s12">
        
        @foreach (var item in ViewBag.Info)
        {
            <h5 class="dh right-align" style="direction: rtl">@item.Title</h5>
        <hr>
            <img src="~/LinkPic/@item.ImgUrl" class="center-align responsive-img"/>
             <p class="dh news-parag" style="direction: rtl;text-align: justify; overflow-wrap: break-word;">
            @item.Text
        </p>
        }
       
    </div>
</div>
</div>
</div>